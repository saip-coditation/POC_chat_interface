{
    "builds": [
        {
            "src": "backend/build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles_build"
            }
        },
        {
            "src": "backend/config/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.12"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "backend/config/wsgi.py"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}